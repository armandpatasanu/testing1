            <TextField fx:id="videoCategoryValue" layoutX="416.0" layoutY="73.0" promptText="category" />
            <TextField fx:id="videoTitleValue" layoutX="416.0" layoutY="114.0" promptText="title" />
            <TextArea fx:id="videoDescriptionValue" layoutX="372.0" layoutY="151.0" prefHeight="92.0" prefWidth="201.0" promptText="enter a video description" wrapText="true" />
